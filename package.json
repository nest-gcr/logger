{
  "name": "@nest-gcr/logger",
  "version": "1.0.1",
  "description": "NestJS npm package starter",
  "author": "Mathieu Marteau <marteau.mathieu@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "nest start --watch",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "cloudrun",
    "logger"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nest-gcr/logger"
  },
  "bugs": "https://github.com/nest-gcr/logger",
  "peerDependencies": {
    "@nestjs/common": "^6.0.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "@google-cloud/logging-winston": "^4.2.3",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@apollo/gateway": "^2.0.2",
    "@nestjs/apollo": "^10.0.11",
    "@nestjs/common": "^8.4.5",
    "@nestjs/core": "^8.4.5",
    "@nestjs/graphql": "^10.0.11",
    "@nestjs/platform-express": "^8.4.5",
    "@nestjs/testing": "^8.4.5",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "^16.11.35",
    "@types/supertest": "^2.0.12",
    "apollo-server-express": "^3.7.0",
    "graphql": "^16.5.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "supertest": "^6.2.3",
    "ts-jest": "24.0.2",
    "ts-morph": "^14.0.0",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "4.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
